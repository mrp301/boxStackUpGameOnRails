<table>
  <thead>
    <tr>
      <th>順位</th>
      <th>名前</th>
      <th>スコア</th>
    </tr>
  </thead>
  <tbody>
  <% @scores.each_with_index do |score, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= score.user_name %></td>
      <td><%= score.score %></td>
    </tr>
  <% end %>
  </tbody>
</table>
